@model Google.Apis.Calendar.v3.Data.Events

@{
    ViewBag.Title = "Schedule";
}

<h2>Schedule</h2>

<iframe src="https://calendar.google.com/calendar/embed?src=caseygruse1%40gmail.com&ctz=America%2FLos_Angeles" style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>

@if (Model.Items != null && Model.Items.Count > 0)
{
    foreach (var eventItem in Model.Items)
    {
        string when = eventItem.Start.DateTime.ToString();
        if (String.IsNullOrEmpty(when))
        {
            when = eventItem.Start.Date;
        }
        <h2>@eventItem.Summary, @when</h2> 
    }
}
else
{
    <h2>No upcoming events found.</h2>
}


